<div class="main-wrapper color-{{ section.id }}">
  <div class="page-width image-with-text__wrapper">
    <div class="image-with-text {{ section.settings.switch }}">
      <div class="text-container">
        <div class="text-container__text">
          {% if section.settings.caption != blank %}
              <div class="text-container__caption">
                {{ section.settings.caption }}
              </div>
            {% endif %}
          {% if section.settings.heading != blank %}
            <div class="text-container__heading section-heading heading-{{ section.id }}">
              {{ section.settings.heading | replace: '<p', '<h2' }}
            </div>
            {% if section.settings.paragraph != blank %}
              <div class="text-container__paragraph">
                {{ section.settings.paragraph }}
              </div>
            {% endif %}
            <div class="text-container__search ">
                <input type="text" placeholder="Enter your Email Address" name="search">
                {%- comment -%} <button type="submit"><i class=""></i></button> {%- endcomment -%}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="image-container">
        {%- if section.settings.big-image != blank -%}
          <div class="image-container__big-image">
            {%- render 'image',
              class: 'image-container__image-child media media--square',
              mobileSrc: section.settings.big-image,
              desktopSrc: section.settings.big-image
            -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% style %}
  .text-container__search .text-container__paragraph .text-container__heading{
    margin-top:-50px;
  }
  .color-{{ section.id }}{
    background: {{ section.settings.background }}
  }
  .heading-{{section.id}} > h3 {
    color: {{ section.settings.heading_color }}
  }
{% endstyle %}
{% schema %}
  {
    "name": "News-letter",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "switch",
        "label": "Switch Position for image and text",
        "options": [
          {
          "value": "left-switch",
          "label": "Left"
          },
          {
            "value": "right-switch",
            "label": "Right"
          }
        ],
        "default": "left-switch",
        "info": "Only works on desktop"
      },
      {
        "type": "header",
        "content": "Color settings"
      },
      {
        "type": "color_background",
        "id": "background",
        "label": "Background",
        "default": "Linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(244, 248, 255, 1) 100%)"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Text color",
        "default": "#163F55"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Choose image"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Get 15% Off on your first order, get free delivery</p>"
      },
      {
        "type": "richtext",
        "id": "caption",
        "label": "Caption text",
        "default": "<p>lorem10 asdifncadkncfkadcf nakl nacd fandckld fcl</p>"
      },
      {
        "type": "richtext",
        "id": "paragraph",
        "label": "Paragraph text"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Button text",
        "default": "Shop Now"
      },
      {
        "type": "image_picker",
        "id": "big-image",
        "label": "Choose Image for other half screen"
      }
    ],
    "presets": [
      {
        "name": "News-letter"
      }
    ]
  }
{% endschema %}